				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Store the CSRF token if it's in the response headers",
									"var csrfToken = pm.response.headers.get('X-CSRF-Token');",
									"if (csrfToken) {",
									"    pm.environment.set('csrf_token', csrfToken);",
									"}",
									"",
									"// Parse the response body",
									"var jsonData = pm.response.json();",
									"",
									"// If the response contains a token, store it",
									"if (jsonData.token) {",
									"    pm.environment.set('auth_token', jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [

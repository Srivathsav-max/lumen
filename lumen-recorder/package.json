{
  "name": "lumen-recorder",
  "version": "1.0.0",
  "description": "A desktop recording application for meetings and classes with AI-powered summaries",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "npm run build:dev && electron . --dev",
    "build": "tsc && electron-builder",
    "build:dev": "tsc",
    "build:watch": "tsc --watch",
    "dist": "npm run build && electron-builder --publish=never",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "recorder",
    "meeting",
    "desktop",
    "lumen"
  ],
  "author": "Lumen Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.lumen.recorder",
    "productName": "Lumen Recorder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}